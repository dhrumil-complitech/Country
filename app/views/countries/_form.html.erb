<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Country</h5>
    </div>
    <div class="card-body border-top">
        <%= form_with model:@country, class: "form-validate-jquery", local: true do |form| %>

            <div class="mb-3">
                <%= form.label :name, class: "form-label" %>
                <%= form.text_field :name, required: true, placeholder: "Enter Country Name", class: "form-control" %>
            </div>

            <div class="mb-3">
                <%= form.label :code, class: "form-label" %>
                <%= form.text_field :code, required: true, placeholder: "Enter Country Code", class: "form-control" %>
            </div>

            <div class="mb-3">
            <%= form.label :is_active, class: "form-check-label mb-2" %>
              <%= form.check_box :is_active, id: "dc_ls_c", class: "form-check-input" %> 
            </div>

            <div class="text-end">
                <%= form.submit "Country Created", class: "btn btn-primary" %>
            </div>

        <% end %>
    </div>
</div>
