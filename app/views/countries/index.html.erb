<div class="content">
<div class="card">
  <div class="card-header d-md-flex ">
    <h5 class="mb-0">Country</h5>
    <div class="collapse d-lg-block my-lg-auto ms-lg-auto">
  </div>
  <%= form_tag(import_csv_countries_path, multipart: true) do %>
  <label for="csv_file" class="btn btn-warning mb" style="color: black">
    Import CSV
    <input type="file" name="csv_file" id="csv_file" accept=".csv" style="display: none;">
  </label>
  <%= submit_tag 'Upload', class: 'btn btn-primary' %>
<% end %>

   <%= link_to 'Export CSV', countries_path(format: 'csv'), class: "btn btn-warning me-3", style: 'color:black' %>
     <%= link_to 'New country', new_country_path, class: "btn btn-warning", style: 'color:black' %>
    </div>
  </div>
   
<table class="table" id="countries-datatable" data-source="<%= countries_path(format: :json) %>">
 <thead>
  <tr>
    <th>Name</th>
     <th>Code</th>
    <th>Active</th>
    <div class="text-center">
    <th>Actions</th>
    </div>
  </tr>
 </thead>
 <tbody>
 </tbody>
</table>
</div>

</div>
